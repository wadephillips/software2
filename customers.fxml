<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calendar.controllers.CustomersController">
   <top>
      <HBox BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <children>
            <Button fx:id="addCustomerButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#loadAddCustomerView" text="">
               <font>
                  <Font name="Font Awesome 5 Pro Regular" size="14.0" />
               </font>
               <tooltip>
                  <Tooltip text="Add user" />
               </tooltip>
            </Button>
            <Button fx:id="editCustomerButton" contentDisplay="RIGHT" disable="true" mnemonicParsing="false" onAction="#editCustomer" text="">
               <font>
                  <Font name="Font Awesome 5 Pro Regular" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
               <tooltip>
                  <Tooltip text="Edit User" />
               </tooltip></Button>
         </children>
      </HBox>
   </top>
    <center>
        <StackPane fx:id="bodyPane">

        </StackPane>
    </center>
</BorderPane>
